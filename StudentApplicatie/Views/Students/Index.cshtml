@model IEnumerable<StudentApplicatie.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LabPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamenPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LabPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamenPoints)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    <p>
        Gemiddelde labo punten: @ViewData["avg"]
    </p>

    <p>
        Min labo punten: @ViewData["min"]
    </p>
    <p>
        Max labo punten: @ViewData["max"]
    </p>  
</table>
